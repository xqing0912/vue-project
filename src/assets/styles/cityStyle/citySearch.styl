.search
    height:1.6rem
    background: #00bcd4
    display: flex
    justify-content: center
    .search-input
        box-sizing: border-box
        width: 98%
        height:1.3rem
        padding: 0 .25rem
        line-height: 1.2rem
        text-align: center
        border-radius: .15rem
        border-style: none
        color: #666
.search-content
    z-index: 1
    overflow: hidden
    position: absolute
    top: 4.1rem;
    left: 0
    right: 0
    bottom: 0
    background: #eee
    .search-item
        line-height: 1.62rem
        padding-left: .5rem
        background: #fff
        color:#666



